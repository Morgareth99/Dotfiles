# =============================================================================
# ~/.gtkrc-2.0
# =============================================================================

# === Widget style ============================================================
style        "radicv610" { font_name = "Liberation Sans 10" }
widget_class "*"           style       "radicv610"

# === Theme and font ==========================================================
gtk-icon-theme-name = "Adwaita"
gtk-theme-name      = "Adwaita"
gtk-font-name       = "Liberation Sans 10"

# === Xft =====================================================================
gtk-xft-dpi         = 98304
gtk-xft-hinting     = 1
gtk-xft-hintstyle   = "hintfull"
gtk-xft-antialias   = 1
gtk-xft-rgba        = "rgb"

# =============================================================================
# vim:set nu et ts=4 sw=4:
# =============================================================================
