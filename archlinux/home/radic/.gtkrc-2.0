# =============================================================================
# ~/.gtkrc-2.0
# =============================================================================

# === Widget style ============================================================
style        "radicz580" { font_name = "Liberation Sans 10" }
widget_class "*"           style       "radicz580"

# === Font ====================================================================
gtk-font-name     = "Liberation Sans 10"

# === Xft =====================================================================
gtk-xft-dpi       = 98304
gtk-xft-hinting   = 1
gtk-xft-hintstyle = "hintfull"
gtk-xft-antialias = 1
gtk-xft-rgba      = "rgb"

